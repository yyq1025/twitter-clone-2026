{
	admin off
	auto_https disable_redirects
}

localhost:3001 {
	tls internal
	reverse_proxy localhost:3000 {
		flush_interval -1
	}
	encode gzip

	header {
		Cache-Control "no-cache, no-transform"
		X-Accel-Buffering "no"
	}
}

localhost:9443 {
	tls internal
	reverse_proxy localhost:9090
	encode gzip
}
